
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Contents/Themes/login.css" rel="stylesheet" />
      <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    
    <title>آرشا</title>
</head>
<body class="container-transparent">
    <div class="container">
        <div class="row">
            <div class="span4"></div>
            <div class="span4">
                <img class="img-responsive center-block" width="304" height="236" src="~/Contents/Themes/logo.png" />
            </div>
            <div class="span4"></div>
        </div>
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">ورود به اکانت</div>
                        <div style="float:left; font-size: 80%; position: relative; top:-10px">
                            @Html.ActionLink("رمز خود را فراموش کرده اید?", "ForgetPassword")
                           </div>
                    </div>

                    <div style="padding-top:30px" class="panel-body">

                        <div @if (ViewBag.HasError == null || !ViewBag.HasError) { <text> style="display:none" </text> } id="login-alert" class="alert alert-danger col-sm-12">
                            @ViewBag.Message
                        </div>

                        <form id="loginform" action="/Account/Login" method="post" class="form-horizontal" role="form">

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="نام کاربری">
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password" placeholder="رمز عبور">
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <!-- Button -->

                                <div class="col-sm-12 controls">
                                    <button type="submit" id="btn-login" class="btn btn-success">ورود  </button>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                        اکانت ندارید!
                                        <a href="#" onclick="$('#loginbox').hide(); $('#signupbox').show()">
                                            ساخت اکانت
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">ساخت اکانت</div>
                        <div style="float:left; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">ورود</a></div>
                    </div>
                    <div class="panel-body">
                        <form id="signupform" action="/Account/Register" method="post" class="form-horizontal" role="form">

                            <div id="signupalert" @if (ViewBag.HasError == null || !ViewBag.HasError) {<text> style="display:none" </text>}
                                 class="alert alert-danger">
                                <p>خطا:@ViewBag.Message</p>
                                <span></span>
                            </div>



                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">نام کاربری</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="username" placeholder="نام کاربری" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="firstname" class="col-md-3 control-label">نام</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="firstname" placeholder="نام" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastname" class="col-md-3 control-label">نام خانوادگی</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="lastname" placeholder="نام خانوادگی" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">رمز عبور</label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" name="password" placeholder="رمز عبور" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="mobile" class="col-md-3 control-label">موبایل</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="mobile" placeholder="موبایل" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="discount" class="col-md-3 control-label">کد تخفیف</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="discount" placeholder="کد تخفیف">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="email" class="col-md-3 control-label">ایمیل</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="email" placeholder="ایمیل" >
                                </div>
                            </div>

                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-3 col-md-9">
                                    <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp ثبت نام</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>




            </div>
        
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
