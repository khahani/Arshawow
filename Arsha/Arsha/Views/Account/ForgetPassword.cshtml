@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Contents/Themes/login.css" rel="stylesheet" />
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>


    <title>آرشا</title>
</head>
<body class="container-transparent">
    <div class="container">
        <div class="row">
            <div class="span4"></div>
            <div class="span4">
                <img class="img-responsive center-block" width="304" height="236" src="~/Contents/Themes/logo.png" />
            </div>
            <div class="span4"></div>
        </div>
        <div id="forgetbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">بازیابی کلمه عبور</div>
                    <div style="float:left; font-size: 80%; position: relative; top:-10px">
                        @Html.ActionLink("ورود", "Login")</div>
                </div>

                <div style="padding-top:30px" class="panel-body">

                    <div @if (ViewBag.HasError == null || !ViewBag.HasError) { <text> style="display:none" </text>    } id="login-alert" class="alert alert-danger col-sm-12">
                        @ViewBag.Message
                    </div>

                    <form id="forgetform" action="/Account/SendPassword" method="post" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                            <input id="forget-mobile" type="text" class="form-control" name="mobile" value="" placeholder="شماره موبایل">
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <button type="submit" id="btn-login" class="btn btn-success">ارسال رمز  </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>




